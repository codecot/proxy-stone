{
  "name": "proxy-server-ts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts --port 4000 --host 127.0.0.1 --enable-file-cache",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js --port 8000",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:env:pg": "cp .env.pgsql .env",
    "db:env:mysql": "cp .env.mysql .env",
    "docker:pg": "npm run db:env:pg && docker compose -f docker-compose.db.yml --profile postgres up -d",
    "docker:mysql": "npm run db:env:mysql && docker compose -f docker-compose.db.yml --profile mysql up -d",
    "docker:pg:logs": "docker compose -f docker-compose.db.yml --profile postgres logs -f",
    "docker:mysql:logs": "docker compose -f docker-compose.db.yml --profile mysql logs -f",
    "docker:pg:down": "docker compose -f docker-compose.db.yml --profile postgres down",
    "docker:mysql:down": "docker compose -f docker-compose.db.yml --profile mysql down",
    "docker:pg:restart": "npm run docker:pg:down && npm run docker:pg",
    "docker:mysql:restart": "npm run docker:mysql:down && npm run docker:mysql",
    "docker:pg:reset": "npm run docker:pg:down && docker volume rm proxy_postgres proxy_pgadmin && npm run docker:pg",
    "docker:mysql:reset": "npm run docker:mysql:down && docker volume rm proxy_mysql && npm run docker:mysql"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@sentry/node": "^9.22.0",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/sqlite3": "^3.1.11",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "dd-trace": "^5.53.0",
    "fastify": "^5.3.2",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "minimatch": "^9.0.5",
    "mysql2": "^3.14.1",
    "pg": "^8.16.0",
    "prom-client": "^15.1.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "@types/pg": "^8.15.2",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
